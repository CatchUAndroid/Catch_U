<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/personRootCardView"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/toastBackground">

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="@color/toastBackground"
        android:id="@+id/specialListLinearLayout"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/specialPictureImgView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/img_border_blue"
            android:src="@drawable/gallery_icon80"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/specialNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ugur Gogebakannn"
            android:layout_gravity="center"
            android:textSize="7sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

</android.support.v7.widget.CardView>